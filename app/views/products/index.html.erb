<h1>Listing products</h1>

<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr class="linea <%= cycle('par','impar') %>">
    <td class="celda_imagen">
      <%= image_tag product.imagen_url, width:"100" %>
    </td>
    <td class="celda_descripcion">
      <span class="titulo"><%= product.titulo %></span><br/><br/>
      <%= truncate(strip_tags(product.descripcion),length:100) %><br/><br/>
      <%= number_to_currency(product.precio) %>
    </td>
    <td class="celda_acciones">
      <%= link_to 'Show', product %><br/>
      <%= link_to 'Edit', edit_product_path(product) %><br/>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
